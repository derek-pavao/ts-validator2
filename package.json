{
  "name": "ts-validator2",
  "version": "0.1.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "release": "npm run build && npm run generate-dts",
    "generate-dts": "dts-generator --project ./ --name ts-validator2 --out ./dist/ts-validator2.d.ts",
    "generate-docs": "typedoc --mode modules --readme none --module commonjs --moduleResolution node --includeDeclarations --out ./docs/ ./src/index.ts",
    "serve-docs": "http-server ./docs",
    "build": "tsc",
    "lint": "tslint src/**/*.ts",
    "test": "mocha --require ts-node/register src/**/*-spec.ts",
    "test:w": "./node_modules/.bin/mocha --require ts-node/register -w src/**/*-spec.ts",
    "clean": "rm -r dist && rm -r docs"
  },
  "typescript": {
    "definition": "dist/ts-validator2.d.ts"
  },
  "author": "Derek Pavao <derek@dotdeeka.com>",
  "license": "MIT",
  "dependencies": {
    "dts-generator": "^1.7.0",
    "lodash": "^4.6.1",
    "typescript": "^1.8.7",
    "typings": "^0.6.9"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "http-server": "^0.9.0",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.4",
    "ts-node": "^0.5.5",
    "tslint": "^3.5.0",
    "typedoc": "^0.3.12"
  }
}
